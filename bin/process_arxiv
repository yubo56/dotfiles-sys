#!/usr/bin/python

import sys
import re
import os
import shutil
from datetime import date

heading_re = re.compile(r'\w+:')
def sanitize(line):
    # drop these lines
    if line.startswith('\\\\')\
            or line.startswith('-----')\
            or line.startswith('%%%'):
        return ''

    # bunch of unnecessary chars
    ret = line\
        .replace('&nbsp; ', '')\
        .replace('<wbr>', '')\
        .replace('<br>', '')\
        .strip()

    if line.startswith('arXiv:'):
        return '\n' + ret
    return ret

if __name__ == '__main__':
    in_filename = sys.argv[1]
    out_filename = '%s.arxiv' % date.today().strftime(r'%Y_%m_%d')

    with open(in_filename, 'r') as f:
        with open(out_filename, 'w') as out:
            line = f.readline()
            # message hasn't started yet
            while not line.startswith('arXiv'):
                line = f.readline()
            # ends with the 'For subscribe' line
            while line != '' and not line.startswith('For subscribe'):
                sline = sanitize(line)
                if sline != '':
                    out.write(sline + '\n')
                line = f.readline()
    os.remove(in_filename)
    shutil.rmtree(in_filename.replace('.html', '_files'))
