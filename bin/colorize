#!/bin/bash

# Color variables
red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'
magenta='\033[0;35m'
cyan='\033[0;36m'
# Clear the color after that
clear='\033[0m'

# Examples
echo -e "${red}$1${clear}"
echo -e "${green}$2${clear}"
echo -e "${yellow}$3${clear}"
echo -e "${blue}$4${clear}"
echo -e "${magenta}$5${clear}"
echo -e "${cyan}$6${clear}"
echo -e "${red}$7${clear}"
echo -e "${green}$8${clear}"
echo -e "${yellow}$9${clear}"
echo -e "${blue}${10}${clear}"
echo -e "${magenta}${11}${clear}"
echo -e "${cyan}${12}${clear}"
echo -e "${red}${13}${clear}"
echo -e "${green}${14}${clear}"
echo -e "${yellow}${15}${clear}"
echo -e "${blue}${16}${clear}"
echo -e "${magenta}${17}${clear}"

# echo -e "The color is: ${red}red${clear}!"
# echo -e "The color is: ${green}green${clear}!"
# echo -e "The color is: ${yellow}yellow${clear}!"
# echo -e "The color is: ${blue}blue${clear}!"
# echo -e "The color is: ${magenta}magenta${clear}!"
# echo -e "The color is: ${cyan}cyan${clear}!"
