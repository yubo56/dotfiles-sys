#!/bin/sh
if [[ "$(hostnamectl hostname)" =~ ArchTest ]]; then
    export WIFI=wlp7s0
    alias rewin='sudo efibootmgr -n 1 && sudo reboot'
    export brightfile='/sys/class/backlight/intel_backlight/brightness'
    export brightmax='/sys/class/backlight/intel_backlight/max_brightness'
    # brightness increment
    export inc=3
else if [[ "$(hostnamectl hostname)" =~ YuboDesktop ]]; then
    export WIFI=wlp8s0
    alias rewin='sudo efibootmgr -n 0 && sudo reboot'
    export brightfile=''
    export brightmax=''
else if [[ "$(hostnamectl hostname)" =~ YuboAcer ]]; then
    export WIFI=wlo1
    alias rewin='sudo efibootmgr -n 0 && sudo reboot'
    export brightfile='/sys/class/backlight/amdgpu_bl1/brightness'
    export brightmax='/sys/class/backlight/amdgpu_bl1/max_brightness'
    export inc=600
    export xinput_touchpad_idx=9
    export temp_file=/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon4/temp1_input
fi; fi; fi
